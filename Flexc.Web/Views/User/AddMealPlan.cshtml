@model User

 <form asp-action="addMealPlan" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Id" class="control-label"><i class="bi-person-fill"></i> userId</label>
            <input asp-for="Id" class="form-control" />
        </div>
          <div class="mt-3">
            <label asp-for="targetId" class="form-label"></label>
            <input asp-for="targetId" class="form-control"/>
            <span  asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <input type="submit" value="addMealPlan" class="btn btn-primary" />
            <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
        </div>

    </form>