@model Message

<div id="closeMessageModal" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header ">
            <h5 class="modal-title">Close Message</h5>            
        </div>
        <form asp-action="Close" asp-route-id="@Model.Id">
            <div class="modal-body">
                   <div class="mt-3">
                    <label asp-for="Name" class="form-label"></label>
                    <textarea rows="7" asp-for="Name" class="form-control"></textarea>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>  
                 <div class="mt-3">
                    <label asp-for="Context" class="form-label"></label>
                    <textarea rows="7" asp-for="Context" class="form-control"></textarea>
                    <span asp-validation-for="Context" class="text-danger"></span>
                </div>     
            </div>
            <div class="modal-footer">
                <input type="submit" value="Confirm" class="btn btn-danger" />
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>           
            </div>
        </form>
     
    </div>
  </div>
</div>