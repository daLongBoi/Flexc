@model MessageCreateViewModel

<partial name="_Breadcrumbs" model=@(new [] { ("/", "Home"), ("/Message", "Messages"), ("","Create") })>

<h3 class="mt-4 mb-4">Create Message</h3>

<form asp-action="Create">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mt-3">
        <label asp-for="UserId" class="form-label"></label>      
        <select asp-for="UserId" class="form-control" 
                asp-items="@Model.Users"))">
            <option>Select User</option>
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label asp-for="Context" class="form-label"></label>      
        <textarea rows="5" asp-for="Context" class="form-control"></textarea>
        <span asp-validation-for="Context" class="text-danger"></span>
    </div>
   
    <div class="mt-3">
        <input type="submit" value="Create" class="btn btn-primary"/>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </div>

</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}