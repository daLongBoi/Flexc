@model Workout
<partial name="_BreadCrumbs" model=@(new [] {
    ("/", "Home"),("/Vehicle", "Vehicle"),
    ("", "Delete")
})/>

<h3 class="callout callout-info mt-4 mb-4">Delete Meal</h3>

<h4 class="mb-4">Are you sure you want to delete this Meal?</h4>
 <div class="col-8 card rounded shadow p-3">
        <dl class="row">       
                <dt class="col-5">Id</dt>
            <dd class="col-7">@Model.Id</dd>

             <dt class="col-5">Workout Name</dt>
            <dd class="col-7">@Model.Name</dd>

            <dt class="col-5">Date/time</dt>
            <dd class="col-7">@Model.DateWorkout</dd>
            
         
        </dl>
<div>
    <!-- disply the vechile Id to be deleted using the Id -->

    <form asp-action="DeleteConfirm" type="post">
        <input type="hidden" asp-for="Id" class="form-control"/>

            <input type="submit" value="Confirm" class="btn btn-danger"/>
            <a class="btn btn-secondary"asp-controller="Workout" asp-action="index"> Cancel</a>
    
    </form>
</div>