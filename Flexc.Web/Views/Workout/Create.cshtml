@model Meal
<partial name="_BreadCrumbs" model=@(new [] {
    ("/", "Home"),("/Meal", "Meal"),
    ("", "Create")
})/>
<h3 class="callout callout-info mt-4 mb-4">Create Meal</h3>

<div class="card rounded shadow p-3">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <!-- ID -->
        <div  class="mt-3">
            <label asp-for="UserId" class="form-label"></label>
            <input asp-for="UserId" class="form-control"/>
            <span  asp-validation-for="UserId" class="text-danger"></span>
        </div>
        <!-- Name -->
        <div class="mt-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control"/>
            <span  asp-validation-for="Name" class="text-danger"></span>
        </div>
         <!-- Date of meal -->
        <div class="mt-3">
            <label asp-for="DateMeal" class="form-label"></label>
            <input asp-for="DateMeal" class="form-control"/>
            <span  asp-validation-for="DateMeal" class="text-danger"></span>
        </div>

                <!-- Make -->
        <div class="mt-3">
            <label asp-for="TotalCalories" class="form-label"></label>
            <input asp-for="TotalCalories" class="form-control"/>
            <span  asp-validation-for="TotalCalories" class="text-danger"></span>
        </div>

        <!-- add PhotoUrl input group - ensure input field type is url -->
        <div class="mt-3">
            <label asp-for="PhotoUrl" class="form-label"></label>
            <input type="url" asp-for="PhotoUrl" class="form-control"/>
            <span  asp-validation-for="PhotoUrl"class="text-danger"></span>
        </div>

        <div class="mt-3">
            <input type="submit" value="Create" class="btn btn-primary"/>
            <a class="btn btn-secondary"asp-controller="Vechile" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
 